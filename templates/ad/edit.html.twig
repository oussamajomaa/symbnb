{% extends "base.html.twig" %}

{% block title %}Modifier une annonce{% endblock %}
{% form_theme form "ad/_collection.html.twig" %}
{% block body %}
    <div class="container">
        <div class="container">
            <h1>Modifier l'annonce: {{ad.title}}</h1>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary">Modifier l'annonce</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
